CC = cc
CFLAGS= -c -O -L.
LDFLAGS= -L/usr/X11/lib
LIBS= -lglut -lGLU -lGL -lX11 -lm -lmug07

main: main.o ppm.o build.o ui.o
	$(CC) -g $(LDFLAGS) main.o ppm.o build.o ui.o $(LIBS) -o $@
main.o: main.c main.h
	$(CC) $(CFLAGS) main.c
ppm.o: ppm.c main.h
	$(CC) $(CFLAGS) ppm.c
build.o: build.c main.h
	$(CC) $(CFLAGS) build.c
ui.o: ui.c main.h
	$(CC) $(CFLAGS) ui.c
clean:
	rm -f *.o main
